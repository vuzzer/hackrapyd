<style>
  .nw {
    width: 430px;
    height: 550px;
    margin-left: 45px;
  }
</style>

<div class="chatbot ">
  <div class="chatbot__support scrollUp nw" id="bot">

    <div class="chatbot__header">
      <div class="chatbot__image--header">
        <img style="border-radius: 20px;"
          src="https://www.internetandtechnologylaw.com/files/2019/06/iStock-872962368-chat-bots-883x1000.jpg"
          width="50" alt="" srcset="">
      </div>
      <div class="chatbot__content--header">
        <h2 class="chatbot__heading--header">RapydBot</h2>
        <p class="chatbot__description--header h4">RapydBot, your Smart Operator</p>
      </div>
    </div>

    <div class="chatbot__messages">
      <div class="support container">
        <div class="row" id="my-carts">

          <% for (const item of locals.cart.items) { %>

            <div class="col mb-6">
              <div class="card h-10 div2 border border-muted">
                <img src="<%= item.product.thumbnail %>" alt="" class="card-img-top">
                <div class="card-body">
                  <div class="card-title h5">
                    <%= item.product.title %>
                  </div>
                  <a href="#" class="btn btn-outline-primary" data-price="<%= item.product.price %>"><span class="h5">$
                      <%= item.product.price.toFixed(2) %>
                    </span></a>
                  <span style="font-size: 18px;cursor:pointer;" onclick="delToCart('<%= item.product.id %>')"
                    class="h3 badge badge-warning text-danger">&times;</span>

                  <button class="btn" onclick="add('<%= item.quantity %>','<%= item.product.id %>')">
                    <i class="fa-solid fa-plus"></i>
                  </button>

                  <span style="font-size: 18px;" class="h3 mx-auto badge badge-warning text-success">article <%=
                      item.quantity %></span>

                  <button class="btn" onclick="minus('<%= item.quantity %>','<%= item.product.id %>')">
                    <i class="fa-solid fa-minus"></i>
                  </button>
                </div>
              </div>
            </div>
            <% } %>
        </div>

        <div class="button-buy">
          <% if (locals.cart.items.length> 0) { %>
            <a href="#" class="btn btn-success w-100" onclick="paid('<%= locals.cart.totalPrice %>')"
              data-price="<%= locals.cart.totalPrice %>"><span class=" h4">Buy</span> <span class="h4"
                id="total-amount">
                <%= locals.cart.totalPrice %>$
              </span></a>
            <% } %>
        </div>
      </div>
    </div>


    <div class="chatbot__footer">
      <input placeholder="send message" name="message" style="font-size: 1.5em;" />
      <span style="font-size:2.5em; color:grey; padding: 0 10px;"><i class="fas fa-paper-plane"></i></span>
    </div>
  </div>

</div>


<div class="chatbot__button scrollUp chatbutt">
  <button><img width="50" style="border-radius: 50px;"
      src="https://www.internetandtechnologylaw.com/files/2019/06/iStock-872962368-chat-bots-883x1000.jpg" /></button>
  <i class="badge badge-warning fw-500" style="font-size: 19px;border: 1px solid orangered; font-weight: 800;"><span
      id="panier" class="paniero" data-nbp="<%= locals.cart.totalQuantity %>">
      <%= locals.cart.totalQuantity %>
    </span><span id="urgent" class="image-clignote " style="color:red;font-size: 25px;display: none;"> â€¢ </span></i>
</div>


<!-- Modal CheckOut -->
<div id="ModalCheckOut" class="modal" style="z-index:77777777;">
  <div class="modal-content" style="width: 60%;height: 90%;">
    <span onclick="modalCheckClose()" class="f-left" style="font-size: 25px;cursor: pointer;">&times; </span>
    <p> <span style="float: right;"> Rapyd-Checkout</span></p>
    <div class="modal-body">
      <!-- Feedback -->
      <div class="row justify-content-center">
        <div class="col text-center my-4" style="display: none" id="feedback">
          <div class="support">
            <img src="" id="image" alt="" height="120" class="mt-2">
            <h3 id="title" class="my-4"></h3>
            <p id="message"></p>
            <a role="button" onclick="modalCheckClose()" class="btn btn-custom mt-2" href="javascript:void(0)" id="action"></a>
          </div>
        </div>
      </div>
      <div style="max-width: 100px; max-height: 600px;text-align: center;" id="rapyd-checkout">
        <img id="load" src="img/load.gif" alt="" style="display: none;width: 200px;text-align: center;">
      </div>
    </div>
  </div>
</div>


